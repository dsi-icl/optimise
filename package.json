{
    "name": "optimise",
    "version": "1.13.1",
    "description": "Optimise:MS",
    "keywords": [
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "homepage": "https://github.com/dsi-icl/optimise",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/electron-builder",
            "**/electron-builder/**",
            "**/electron-webpack",
            "**/electron-webpack/**"
        ]
    },
    "engines": {
        "yarn": "^1.10.0"
    },
    "scripts": {
        "build": "lerna run build --scope optimise-core --scope optimise-docker --scope optimise-electron",
        "preelectron": "lerna run build --scope optimise-core --scope optimise-electron",
        "electron": "lerna run electron --scope optimise-electron",
        "lint": "echo Put your favorite linter here.",
        "prepackage": "yarn build",
        "package": "lerna run package --scope optimise-docker --scope optimise-electron",
        "publish": "lerna run publish --scope optimise-docker --scope optimise-electron",
        "postinstall": "yarn run bootstrap",
        "bootstrap": "lerna bootstrap",
        "start": "lerna run start --scope optimise-core --scope optimise-sync --scope optimise-ui --stream",
        "test": "lerna run test --stream"
    },
    "devDependencies": {
        "lerna": "3.17.0"
    }
}