{
    "name": "optimise",
    "version": "2.1.1",
    "description": "Optimise:MS",
    "keywords": [
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "homepage": "https://github.com/dsi-icl/optimise",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/electron-builder",
            "**/electron-builder/**",
            "**/electron-webpack",
            "**/electron-webpack/**"
        ]
    },
    "engines": {
        "yarn": "^1.10.0"
    },
    "scripts": {
        "build": "nx run-many --target=build --parallel=1 --projects=optimise-core,optimise-docker,optimise-electron",
        "preelectron": "nx run-many --target=build --parallel=1 --projects=optimise-core,optimise-electron",
        "electron": "nx run-many --target=electron --projects=optimise-electron",
        "lint": "nx run-many --target=lint",
        "lint-fix": "nx run-many --target=lint-fix",
        "prepackage": "yarn build",
        "package": "nx run-many --target=package --parallel=1 --projects=optimise-docker,optimise-electron",
        "publish": "nx run-many --target=publish --parallel=1 --projects=optimise-docker,optimise-electron",
        "start": "nx run-many --target=start --projects=optimise-core,optimise-sync,optimise-ui",
        "test": "nx run-many --target=test"
    },
    "devDependencies": {
        "@nrwl/nx-cloud": "14.6.2",
        "@nrwl/workspace": "14.7.18",
        "nx": "14.7.17",
        "typescript": "4.8.4"
    },
    "dependencies": {},
    "resolutions": {
        "@jest/reporters":"^24",
        "@jest/test-result":"^24",
        "jest": "^24",
        "jest-config": "^24",
        "jest-resolve": "^24",
        "jest-util": "^24"
    }
}