{
    "name": "optimise",
    "version": "2.0.1",
    "description": "Optimise:MS",
    "keywords": [
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "homepage": "https://github.com/dsi-icl/optimise",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/electron-builder",
            "**/electron-builder/**",
            "**/electron-webpack",
            "**/electron-webpack/**"
        ]
    },
    "engines": {
        "yarn": "^1.10.0"
    },
    "scripts": {
        "build": "lerna run build --concurrency 1 --scope optimise-core --scope optimise-docker --scope optimise-electron",
        "preelectron": "lerna run build --concurrency 1 --scope optimise-core --scope optimise-electron --stream",
        "electron": "lerna run electron --scope optimise-electron",
        "lint": "echo Linter",
        "prepackage": "yarn build",
        "package": "lerna run package --scope optimise-docker --scope optimise-electron",
        "publish": "lerna run publish --scope optimise-docker --scope optimise-electron",
        "postinstall": "yarn run bootstrap",
        "bootstrap": "lerna bootstrap",
        "start": "lerna run start --scope optimise-core --scope optimise-sync --scope optimise-remote-control --scope optimise-ui --stream",
        "test": "lerna run test --stream",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^14.1.0",
        "@commitlint/config-conventional": "^14.1.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "lerna": "4.0.0",
        "typescript": "4.5.5",
        "lint-staged": "^11.2.6"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint"
        ]
    },
    "dependencies": {}
}
