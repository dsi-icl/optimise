{
    "name": "optimise-electron",
    "productName": "Optimise MS Desktop",
    "version": "1.18.0",
    "description": "Optimise:MS Desktop Application",
    "keywords": [
        "research",
        "clinical",
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "prebuild": "cd ../optimise-ui && cross-env PUBLIC_URL=./ yarn build",
        "build": "rimraf -r dist && webpack --config config/webpack.prod.js",
        "build:noui": "rimraf -r dist && webpack --config config/webpack.prod.js",
        "prebuild:dev": "cd ../optimise-ui && cross-env PUBLIC_URL=./ yarn build",
        "build:dev": "rimraf -r dist && webpack --config config/webpack.dev.js",
        "build:dev:noui": "rimraf -r dist && webpack --config config/webpack.dev.js",
        "electron": "yarn run package",
        "postinstall": "electron-builder install-app-deps",
        "package": "electron-builder -p never",
        "prepublish": "yarn build",
        "publish": "electron-builder -p onTagOrDraft .",
        "test:autoupdate": "node ./autoupdate.test.js",
        "test": "yarn test:autoupdate"
    },
    "license": "MIT",
    "build": {
        "appId": "org.optimise-ms.local.app",
        "productName": "Optimise MS Desktop",
        "detectUpdateChannel": true,
        "copyright": "Copyright (c) 2019 Data Science Institute",
        "directories": {
            "output": "build"
        },
        "files": [
            "!**/.env*",
            "!**/.vscode",
            "!**/build",
            "!**/config"
        ],
        "mac": {
            "target": [
                "dmg",
                "pkg",
                "zip"
            ],
            "category": "public.app-category.medical",
            "icon": "resources/icons/mac/icon.png",
            "type": "distribution"
        },
        "dmg": {
            "background": "resources/background/background.png",
            "iconSize": 160,
            "iconTextSize": 12,
            "window": {
                "width": 660,
                "height": 400
            },
            "contents": [
                {
                    "x": 180,
                    "y": 170,
                    "type": "file"
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "publish": [
                "github"
            ],
            "target": [
                "nsis",
                "portable",
                "zip"
            ],
            "icon": "resources/icons/win/app.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "license": "../../LICENSE",
            "installerIcon": "resources/icons/win/app.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "snap"
            ],
            "icon": "resources/icon",
            "category": "Utility"
        },
        "snap": {
            "grade": "stable",
            "summary": "Multiple sclerosis patient data collection software"
        },
        "publish": {
            "provider": "github",
            "owner": "dsi-icl",
            "releaseType": "release",
            "publishAutoUpdate": false
        }
    },
    "dependencies": {
        "electron-log": "4.2.4",
        "electron-updater": "4.3.4",
        "express": "4.17.1",
        "sqlite3": "5.0.0"
    },
    "devDependencies": {
        "@babel/core": "7.11.4",
        "babel-loader": "8.1.0",
        "copy-webpack-plugin": "6.0.3",
        "electron": "10.1.0",
        "electron-builder": "22.8.0",
        "electron-reload": "1.5.0",
        "html-webpack-plugin": "4.4.1",
        "webpack": "4.44.1",
        "webpack-command": "0.5.0",
        "webpack-merge": "5.1.2"
    }
}