{
    "name": "optimise-electron",
    "productName": "OptimiseMSDesktop",
    "version": "1.10.0-alpha",
    "description": "Optimise:MS Desktop Application",
    "keywords": [
        "research",
        "clinical",
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "prebuild": "cd ../optimise-ui && cross-env PUBLIC_URL=./ yarn build",
        "build": "rimraf -r dist && webpack --config config/webpack.prod.js",
        "build:noui": "rimraf -r dist && webpack --config config/webpack.prod.js",
        "prebuild:dev": "cd ../optimise-ui && cross-env PUBLIC_URL=./ yarn build",
        "build:dev": "rimraf -r dist && webpack --config config/webpack.dev.js",
        "build:dev:noui": "rimraf -r dist && webpack --config config/webpack.dev.js",
        "postinstall": "electron-builder install-app-deps",
        "package": "electron-builder .",
        "publish": "electron-builder -p ."
    },
    "license": "MIT",
    "build": {
        "appId": "org.optimise-ms.local.app",
        "productName": "OptimiseMSDesktop",
        "detectUpdateChannel": true,
        "copyright": "Copyright (c) 2018 Data Science Institute",
        "directories": {
            "output": "build"
        },
        "files": [
            "!**/.env*",
            "!**/.vscode",
            "!**/build",
            "!**/config"
        ],
        "mac": {
            "target": [
                "dmg",
                "pkg",
                "zip"
            ],
            "category": "public.app-category.medical",
            "icon": "resources/icons/mac/app.icns",
            "type": "distribution"
        },
        "dmg": {
            "background": "resources/dmg_background/background.png",
            "iconSize": 160,
            "iconTextSize": 12,
            "window": {
                "width": 660,
                "height": 400
            },
            "contents": [
                {
                    "x": 180,
                    "y": 170,
                    "type": "file"
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [
                "nsis",
                "portable",
                "zip"
            ],
            "icon": "resources/icons/win/app.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "snap"
            ],
            "icon": "resources/icon",
            "category": "Utility"
        },
        "snap": {
            "grade": "stable",
            "summary": "Multiple sclerosis patient data collection software"
        },
        "publish": {
            "provider": "github",
            "owner": "dsi-icl",
            "releaseType": "release",
            "publishAutoUpdate": false
        }
    },
    "dependencies": {
        "electron-log": "3.0.1",
        "electron-updater": "4.0.6",
        "express": "4.16.4",
        "sqlite3": "4.0.6"
    },
    "devDependencies": {
        "@babel/core": "7.3.3",
        "babel-loader": "8.0.5",
        "copy-webpack-plugin": "5.0.0",
        "electron": "4.0.3",
        "electron-builder": "20.38.5",
        "electron-reload": "1.4.0",
        "html-webpack-plugin": "3.2.0",
        "webpack": "4.29.5",
        "webpack-command": "0.4.2",
        "webpack-merge": "4.2.1"
    }
}