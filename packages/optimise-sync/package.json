{
    "name": "optimise-sync",
    "version": "1.15.5",
    "description": "Optimise:MS Synchroniser",
    "keywords": [
        "ms"
    ],
    "author": {
        "email": "f.guitton@imperial.ac.uk",
        "name": "Florian Guitton"
    },
    "repository": "github:dsi-icl/optimise",
    "main": "./src/optimiseSyncServer.js",
    "scripts": {
        "lint": "eslint --ext .jsx --ext .js ./",
        "lint:fix": "eslint --ext .jsx --ext .js --fix ./",
        "test": "echo No test",
        "build": "rimraf -rf ./build && cross-env NODE_ENV=production webpack --config webpack.config.server.js",
        "start": "rimraf -rf ./build && cross-env NODE_ENV=development webpack --config webpack.config.server.js"
    },
    "license": "MIT",
    "dependencies": {
        "body-parser": "1.19.0",
        "csurf": "1.11.0",
        "express": "4.17.1",
        "express-session": "1.17.0",
        "connect-mongo": "3.2.0",
        "mongodb": "3.5.2",
        "passport": "0.4.1",
        "saslprep": "1.0.3"
    },
    "devDependencies": {
        "@babel/core": "7.8.4",
        "@babel/plugin-syntax-dynamic-import": "7.8.3",
        "@babel/plugin-transform-modules-commonjs": "7.8.3",
        "@babel/polyfill": "7.8.3",
        "@babel/preset-env": "7.8.4",
        "babel-eslint": "10.0.3",
        "babel-jest": "25.1.0",
        "babel-loader": "8.0.6",
        "babel-plugin-require-context-hook": "1.0.0",
        "chalk": "3.0.0",
        "cross-env": "7.0.0",
        "eslint": "6.8.0",
        "eslint-plugin-promise": "4.2.1",
        "jest": "25.1.0",
        "rimraf": "3.0.1",
        "start-server-webpack-plugin": "2.2.5",
        "webpack": "4.41.5",
        "webpack-cli": "3.3.10"
    },
    "optionalDependencies": {
        "ajv": "6.11.0",
        "fsevents": "2.1.2"
    },
    "jest": {
        "globalSetup": "<rootDir>/test/setup.js",
        "globalTeardown": "<rootDir>/test/teardown.js",
        "testEnvironment": "<rootDir>/test/environment.js",
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.{js,jsx}",
            "!<rootDir>/node_modules/"
        ],
        "transform": {
            "^.+\\.(js|html|scss)$": "<rootDir>/test/preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/**/*.{js,jsx,mjs}",
            "**/+(*.)(spec|test).{js,jsx,mjs}"
        ]
    }
}