{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "scope-enum": [
            2,
            "always",
            [
                "core",
                "ui",
                "docker",
                "electron",
                "sync",
                "remote-control"
            ]
        ],
        "subject-case": [
            2,
            "always",
            [
                "sentence-case"
            ]
        ]
    }
}